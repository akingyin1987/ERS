<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <include layout="@layout/include_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="姓名：张三"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="工种：装箱员"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_zone_food"

        android:text="区货5A235"
        android:padding="3dp"
        android:layout_margin="8dp"
        android:textSize="30sp"
        android:background="@drawable/setting_view_item_selector"
        android:gravity="center"
        android:layout_height="55dp" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_commodity_name"

        android:text="200g恰恰瓜子"
        android:padding="3dp"
        android:layout_margin="8dp"
        android:textSize="30sp"
        android:background="@drawable/setting_view_item_selector"
        android:gravity="center"
        android:layout_height="55dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_view_item_selector"
        android:padding="3dp"

        android:orientation="horizontal">



        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_boxcode"
            android:textColor="@color/red_dark"
            android:text="5件"
            android:padding="3dp"
            android:layout_margin="8dp"
            android:textSize="30sp"

            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_view_item_selector"
        android:padding="3dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">



        <TextView
            android:layout_width="wrap_content"

            android:text="请输入数量"
            android:padding="3dp"
            android:layout_margin="8dp"

            android:layout_gravity="center"

            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:maxLength="5"
            android:background="@drawable/edittext_background_rounded"
            android:inputType="numberSigned"
            android:id="@+id/ed_food_number"/>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确认提交"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"

            android:background="@drawable/bbuton_success_rounded"

            android:id="@+id/btn_config"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="扫描"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"

            android:background="@drawable/bbuton_danger_rounded"

            android:id="@+id/btn_scan"/>
    </LinearLayout>

</RelativeLayout>