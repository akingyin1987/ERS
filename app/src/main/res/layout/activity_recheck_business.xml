<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="姓名：李四"
            android:id="@+id/tv_name"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="工种：复检员"
            android:id="@+id/tv_type"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"

        android:text="拣货人：张三"
        android:id="@+id/tv_Shipper"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/setting_view_item_selector"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="区货:"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:id="@+id/tv_area_food"
                android:text="5A235"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="总件数"/>

            <TextView
                android:layout_width="wrap_content"

                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/tv_total"
                android:text="222"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:text="整"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:id="@+id/tv_whole_total"
                        android:text="222"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:text="零"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:id="@+id/tv_zero_total"
                        android:text="222"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="打印"
            android:id="@+id/btn_print"
            android:background="@drawable/bbuton_default"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="单据修改"
            android:id="@+id/btn_bill_modify"
            android:background="@drawable/bbuton_default"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="零件修改"
            android:id="@+id/btn_Spare_modify"
            android:background="@drawable/bbuton_default"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:text="确定"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bbuton_success_rounded"

        android:id="@+id/btn_start_check"/>
</LinearLayout>