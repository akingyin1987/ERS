<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/afternoon"
    android:layout_height="match_parent">

    <include layout="@layout/include_toolbar"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">





    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:id="@+id/ll_encasement"
         android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_gravity="center"
        android:background="@drawable/bbuton_default_rounded"
        android:orientation="vertical"

        >




        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="装箱系统"

            android:drawableLeft="@drawable/icon_packing"
            android:textColor="#000000"
            android:textSize="32sp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="Encasement system"

            android:textColor="@color/color_b0b8b2"
            />
    </LinearLayout>



        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:id="@+id/ll_review"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center"
            android:background="@drawable/bbuton_success_rounded"
            android:orientation="vertical"

            >




            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="复检系统"
                android:drawableLeft="@drawable/icon_review"
                android:textColor="#000000"
                android:textSize="32sp"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Review system"

                android:textColor="@color/alpha_50_black"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="20dp"
        android:text="重庆问天食品有限公司"/>

   </RelativeLayout>
</LinearLayout>